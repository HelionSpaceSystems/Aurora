from math import*
from numpy import*


class propulsion:
    def __init__(self):
        ''' Constructor for this class. '''
        
    def massFlow(self,stageThrust,exVelocity):
        return stageThrust/exVelocity
        

    def stageThrust(self,dryMass, maxG, planet = 'earth'):
        
        if planet == 'earth':
            gravity = 9.781
            
        return dryMass*maxG*gravity
    
   